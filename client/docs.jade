template(name='docs')
    .ui.container
        div
            #add.ui.green.button
                i.plus.icon
                | Full Add
            .ui.icon.input
                i.lightning.icon
                input#quick_add(type='text' placeholder='Quick Add')
        +doc_cloud
        each docs
            +view

        

template(name='view')
    with doc
        .ui.stackable.padded.grid
            .three.column.row
                .column.scrolling
                    .ui.basic.segment.large150
                        .ui.header
                            if icon
                                i.blue.icon(class=icon)
                            |#{title}
                        if is_dev
                            //- +clone_button
                            //- div
                            //- +author_info
                            //- div
                            //- +creation_info
                            div
                            if is_author
                                //- +edit_button
                                a.ui.big.icon.button(href="/edit/#{_id}")
                                    i.pencil.icon
                            +detect
                        //- +user_list_toggle key='bookmark_ids' add_icon='bookmark outline' remove_icon='bookmark' add_label='Bookmark' remove_label='Unbookmark' color='red' big=true
                        //- +clone_button
                        if watson
                            +doc_sentiment
                            +doc_emotion
                            +concepts
                            +categories
                            +entities
                            +semantic_roles
                            +keyword_list
                            +keywords
                            +concept_list
                            +relations
                            +personality
                            +consumption_preferences
                .column.scrolling
                    .ui.basic.segment.large150
                        each _keys
                            //- .ui.label #{this}
                            +key_view
                        //- .ui.hidden.divider
                        if analyzed_text
                            |#{nl2br analyzed_text}
                            .ui.hidden.divider
                        div
                        +comments
                        +voting
                .column.scrolling
                    .ui.basic.segment.large150
                        if watson
                            +tone
                            +keywords
                        //- +watson_view
                        if visual_classes
                            +visual_classes



